# Production Environment Configuration
# This file shows the structure for production environment variables
# NEVER commit actual production values to version control

# Global Production Settings
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info

# Server Configuration
PORT=${PORT}
HOST=0.0.0.0
FRONTEND_URL=${FRONTEND_URL}

# Client Configuration (set in deployment platform)
VITE_API_URL=${VITE_API_URL}
VITE_FRONTEND_URL=${VITE_FRONTEND_URL}
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Execution System
EXECUTION_PORT=${EXECUTION_PORT}
MAIN_API_URL=${MAIN_API_URL}
TEMP_DIR=/tmp/codearena
EXECUTION_TIMEOUT=10000

# Database (Production - use environment variables)
MONGODB_URL=${MONGODB_URL}

# Redis (Production)
REDIS_URL=${REDIS_URL}

# Security (CRITICAL - use strong, unique secrets)
SESSION_SECRET=${SESSION_SECRET}
JWT_SECRET=${JWT_SECRET}

# CORS (Production - restrict to your domain)
CORS_ORIGIN=${CORS_ORIGIN}
CORS_CREDENTIALS=true

# Email (Production)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# Google OAuth (Production)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CALLBACK_URL=${GOOGLE_CALLBACK_URL}

# Feature Flags (Production)
VITE_ENABLE_CONTESTS=true
VITE_ENABLE_COURSES=true
VITE_ENABLE_ANALYTICS=true

# Performance Settings
JSON_SIZE_LIMIT=50mb
URL_ENCODED_LIMIT=50mb
SESSION_MAX_AGE=86400000

# Database Optimization
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=20
DB_SERVER_SELECTION_TIMEOUT=30000
DB_CONNECT_TIMEOUT=30000
DB_SOCKET_TIMEOUT=45000