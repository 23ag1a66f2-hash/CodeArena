# Development Environment Configuration
# Copy this to .env in your project root and customize the values

# This file provides development-specific defaults
# Individual services should also have their own .env files

# Global Development Settings
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Server Configuration (server/.env)
SERVER_PORT=3001
SERVER_HOST=0.0.0.0
FRONTEND_URL=http://localhost:5000

# Client Configuration (client/.env)
VITE_API_URL=http://localhost:3001
VITE_API_PORT=3001
VITE_FRONTEND_URL=http://localhost:5000
VITE_FRONTEND_PORT=5000
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Execution System (execution-system/.env)
EXECUTION_PORT=3000
EXECUTION_HOST=0.0.0.0
MAIN_API_URL=http://localhost:3001
TEMP_DIR=./temp
EXECUTION_TIMEOUT=5000
DEBUG_MODE=true

# Database (Development - use local MongoDB)
MONGODB_URL=mongodb://localhost:27017/codearena-dev

# Redis (Development)
REDIS_URL=redis://localhost:6379

# Security (Development - use weak secrets for local dev)
SESSION_SECRET=dev-session-secret-at-least-32-characters-long-for-development
JWT_SECRET=dev-jwt-secret-for-development-only

# CORS (Development - allow all localhost)
CORS_ORIGIN=http://localhost:5000,http://localhost:3000
CORS_CREDENTIALS=true

# Email (Development - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-dev-email@gmail.com
SMTP_PASS=your-dev-app-password

# Google OAuth (Development - optional)
GOOGLE_CLIENT_ID=your-dev-google-client-id
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret

# Feature Flags (Development)
VITE_ENABLE_CONTESTS=true
VITE_ENABLE_COURSES=true
VITE_ENABLE_ANALYTICS=true